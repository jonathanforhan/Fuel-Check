<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fuelcheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- NVG Mode -->
    <style name="Theme.CustomNVG" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nvg</item>
        <item name="colorPrimaryVariant">@color/nvg3</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:background">@color/black</item>
        <item name="tooltipForegroundColor">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:textColor">@color/nvg</item>
        <item name="android:textColorHighlightInverse">@color/nvg</item>
        <item name="android:tint">@color/nvg</item>
        <item name="android:titleTextColor">@color/nvg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nvg</item>
        <item name="colorSecondaryVariant">@color/nvg3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">@color/nvg2</item>
        <item name="android:textColorHint">@color/nvg</item>
        <item name="android:colorPrimary">@color/nvg</item>
        <item name="android:color">@color/nvg</item>

    </style>

</resources>